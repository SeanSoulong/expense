<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="primaryTitle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomNavFocusIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/gray</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="primaryButtonStyle">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:height">60dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
    <style name="secondaryButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:height">60dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
    <style name="expenseTrackerStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#6678C5</item>
    </style>
    <style name="style_name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="style_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>
    <style name="style_spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="my_name">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>